{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_API_MOCKING", "SERVER_URL"]
    },
    "build:turbo": {
      "dependsOn": ["^build:turbo"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_API_MOCKING", "SERVER_URL", "TURBOPACK"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_API_MOCKING", "SERVER_URL"]
    },
    "lint": {
      "outputs": []
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build-storybook"],
      "outputs": ["storybook-static/**"]
    }
  },
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_API_MOCKING", "SERVER_URL", "TURBOPACK"]
}
